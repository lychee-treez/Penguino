<% provide(:title, @user.name)%>

<div class="row">
  <aside class="col-md-4">
    <% if @user.image.exists? %>
    <%= image_tag @user.image.url, :class => "prof_pic" %>
    <% else %>
    <%= image_tag "missing.jpg", :class => "prof_pic"%>
    <% end %>
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section id="connections">
      <div id="followers">
        <header> Followers: </header>
        <content> 6 </content>
      </div>
      <div id="following">
        <header> Following: </header>
        <content> 9 </content>
      </div>
    </section>
    <%= button_to "Follow", new_article_path, class: "button", id: "follow_button", method: "get" %>
  </aside>
  <section id="content">
    <%= button_to "New Post", new_article_path, class: "button", id: "create_post", method: "get" %>
    <div id="user_post_list">
      <% @posts.each do |post| %>
      <article class="user_posts">
        <header> <%= post.title %> </header>
        <section> <%= post.body %> </section>
        <footer> <%= post.created_at.to_s()%> </footer>
      </article>
      <% end %>
    </div>
  </section>
</div>
